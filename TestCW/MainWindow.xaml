<Window x:Class="TestCW.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="User Manager" Height="250" Width="400">
    <Grid Margin="10">
        <StackPanel>
            <TextBox x:Name="txtName" Text="Name" Foreground="Gray" Margin="0,5"
         GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus"/>
            <TextBox x:Name="txtEmail" Text="Email" Foreground="Gray" Margin="0,5"
         GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus"/>

            <Button Content="Add User" Click="AddUser_Click" Margin="0,10"/>
        </StackPanel>
    </Grid>
</Window>

